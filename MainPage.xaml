<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobilkimango.MainPage">

    <Grid Padding="20" RowSpacing="15" RowDefinitions="*,*,*,*,*,*,*,*,*,*" >
        <Label Text="ShoppingList"
               FontSize="20"
               HorizontalOptions="Center"
               Grid.Row="0"
               Grid.ColumnSpan="2"/>
        <Entry
            Placeholder="Entry item"
               Grid.Row="1"
               Grid.Column="0"/>

        <Button
                Text="Add"
                Grid.Row="1"
                Grid.Column="1"
                WidthRequest="80"
                Margin="100,0,0,0"/>
        <CollectionView 
                Grid.Row="2"
                Grid.RowSpan="5"    
            Grid.ColumnSpan="2"
                BackgroundColor="Aquamarine">
            
        </CollectionView>
        <Button
                Text="Delete"
                HorizontalOptions="End"
                Grid.Row="7"
                Grid.ColumnSpan="2"/>
    </Grid>

</ContentPage>
